<Window x:Class="LogIn.UI.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogIn.UI"
        mc:Ignorable="d"
        Title="LogIn" Height="404" Width="439" Background="#FFBFBFBF">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Height="175" Margin="0,64,0,0" VerticalAlignment="Top" Width="419">
            <Label Content="Usuario" Height="30" Width="413"/>
            <TextBox x:Name="UsuarioTextBox" Height="40" TextWrapping="Wrap" Width="415"/>
            <Label Content="Contraseña" Height="30" Width="413" Margin="0,10,0,0"/>
            <PasswordBox x:Name="ClaveTextBox" Height="40" Width="415"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Height="90" Margin="0,254,0,0" VerticalAlignment="Top" Width="330">
            <Button x:Name="IniciarSesion" Content="Iniciar Sesión" Height="40" Width="206" Background="#FF6EF100" Click="IniciarSesion_Click"/>
            <Button x:Name="Registrarse" Content="Registrarse" Height="40" Width="206" Margin="0,10,0,0" Background="#FF5CB0F5" Click="Registrarse_Click"/>
        </StackPanel>

    </Grid>
</Window>
